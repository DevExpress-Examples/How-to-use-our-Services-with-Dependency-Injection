<UserControl x:Class="FrameNavigation.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             DataContext="{Binding HomeViewModel, Source={StaticResource ServiceLocator}}">

    <dxwui:PageAdornerControl Header="Home View" HeaderTemplate="{StaticResource PageAdornerHeaderTemplate}">
        <Button Content="Go to Detail View" Command="{Binding NavigateDetailsCommand}"/>
    </dxwui:PageAdornerControl>
</UserControl>
